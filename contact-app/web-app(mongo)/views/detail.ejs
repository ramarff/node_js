<div class="container mt-5">
	<div class="row">
		<h2>Detail Contact</h2>
		<h1><%= contact.nama %></h1>
		
		<% if (!contact) { %>
 			<div class="alert alert-danger fw-bold" role="alert">
			  Data contact tidak ada <br><a href="/contact" class="alert-link fw-normal">Kembali ke daftar contact</a>.
			</div>
		<% }else { %>
		<div class="card" style="width: 25rem;">
		  <div class="card-body">
		  	<img src="img/<%= contact.filename %>">
		    <h5 class="card-title"><%= contact.nama %></h5>
		    <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHP %></h6>
		    <p class="card-text"><%= contact.email %></p>
		    <a href="/contact" class="card-link">&laquo; Kembali ke halaman contact</a>
		  </div>
		</div>
		<% } %>
	</div>
</div>
