<div class="container mt-5">
    <div class="row ">
     <div class="col-md-12">
      <h2 class="text-center">Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mb-3">Tambah Data</a>
      <% if (msg.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <%= msg %>
      </div>
      <% } %>
         <table class="table table-bordered text-center">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Nama</th>
              <th scope="col">Nomor HP</th>
              <th scope="col">Aksi</th>
            </tr>
          </thead>
          <tbody>
          <% if (contacts.length === 0) { %>
              <tr>
                 <td colspan="4"><div class="alert alert-danger fw-bold" role="alert">Data contact masih kosong !</div></td>
              </tr>
          <% } else { %>
           <% contacts.forEach((contact,i) => { i++ %>
              <tr>
                <th scope="row"><%= i++ %></th>
                <td><%= contact.nama %></td>
                <td><%= contact.noHP %></td>
                <td>
                  <a href="/contact/<%= contact._id %>" class="btn btn-success"><i class="bi bi-info-lg" title="info detail"></i></a> 
                  <a href="/contact/delete/<%= contact._id %>" class="btn btn-danger" type="submit" onclick="return confirm('Yakin data ini ingin dihapus?')"><i class="bi bi-trash"></i></a> 
                  <a href="/contact/edit/<%= contact._id %>" class="btn btn-info"><i class="bi bi-pencil-square"></i></a>
                </td>
              </tr>
            <% }) %>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<p> <%= lenCont %> </p>