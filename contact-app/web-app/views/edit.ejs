<div class="container mt-4">
	<div class="row">
	 <div class="col-md-12">
	 	<h1 class="text-center">Form Ubah Data</h1>

	 	<% if (typeof errors != "undefined") { %>
		    <div class="alert alert-danger" role="alert">
			 	<ul>
			 	<% errors.forEach(error => { %>
			 	 <li><%= error.msg %></li>
			 	<% })%>
			 	</ul>
			</div>
	 	<%  } %> 
	 	<form method="post" action="/contact/update/<%= contact.id %>" enctype="multipart/form-data">
	 	  <input type="hidden" name="id" value="<%= contact.id %>">
	 	  <input type="hidden" name="oldName" value="<%= contact.oldName || contact.nama %>">
		  <div class="form-group mb-2">
		    <label for="nama">Nama</label>
		    <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>">
		  </div>
		  <div class="form-group mb-2">
		    <label for="email">Email</label>
		    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
		  </div>
		  <div class="form-group mb-2">
		    <label for="nohp">Nomor Handphone</label>
		    <input type="text" class="form-control" name="noHP" id="nohp" value="<%= contact.noHP %>">
		  </div>
		  <div class="form-group mb-2">
		    <label for="foto">Foto</label><br>
		  	<img src="img/<%= contact.filename %>" width="80px">
		    <input type="file" class="form-control mt-2" name="foto" id="foto" value="<%= contact.noHP %>" >
		  </div>
		  <a href="/contact" class="btn btn-danger">Batal</a>
		  <button type="submit" class="btn btn-primary">Ubah</button>
		</form>
	 </div>
	</div>
</div>